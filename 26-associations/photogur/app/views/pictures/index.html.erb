<%= link_to "Add new picture", new_picture_path %>

<section class="pictures">
  <% @pictures.each do |picture| %>
    <section class="picture">
      <p> <%= link_to 'View', picture_path(picture) %> <%= link_to 'Edit', edit_picture_path(picture) %> <%= link_to 'Delete', picture_path(picture), method: :delete, data: {confirm: "Are you sure?" } %> </p>
      <p class="picture-title"> <%= picture.title %> </p>
      <p class="description"> <%= picture.description %> </p>
      <div class="image-frame"><%= link_to image_tag(picture.url), picture_path(picture) %></div>
      <p>Comments: <%= picture.comments.count %></p>
    </section>
  <% end %>
</section>
